<% @ctr = 0 %>
<% if @assignments.length > 0 %>
<h2>Tasks for <%= @user %></h2>
<table>
<% form_remote_tag :url => {:action => "search_assignments" }, :update=>'user_tasks' do %>
  <% @assignments.each do |@assignment| %>
    <% @id = @assignment.id %>
    <% if params[:note].to_i == @id.to_i %>
       <tr><td colspan="9">Notes for <%= @assignment.project %> <%= @assignment.ExpoCode %></td></tr>	
       <tr><td colspan="9"><%= text_area("assignment[]",'notes',"rows" => 10,"cols" => 80) %></td></tr>
    <% end %>
    <% if params[:history].to_i == @id.to_i %>
      <tr><td colspan="9">History for <%= @assignment.project %> <%= @assignment.ExpoCode %> </td></tr>	
      <tr><td colspan="9"><%= text_area("assignment[]",'history',"rows" => 10,"cols" => 80,"readonly" => true) %></td></tr>
    <% end %>
  <% end %>
  <% @assignments.each do |@assignment| %>
    <% @id = @assignment.id %>
    <% if @ctr == 0 %>
      <tr>
        <td><%= link_to_remote "ExpoCode", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "ExpoCode" } %></td>
        <td><%= link_to_remote "Project/Line", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "project" } %></td>
        <td><%= link_to_remote "Parameter", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "parameter" } %></td>
        <td><%= link_to_remote "Responsible", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "cchdo_contact" } %></td>
        <td><%= link_to_remote "Contact", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "data_contact" } %></td>
        <td><%= link_to_remote "Status", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "current_status" } %> </td>
        <td><%= link_to_remote "Action", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "action" } %> </td>
        <td><%= link_to_remote "Priority", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "priority" } %></td>
        <td><%= link_to_remote "Deadline", :update => "user_tasks",:url => { :action => "search_assignments", :Sort => "deadline" } %></td>
      </tr>
    <% end %>
    <tr>
      <td><%= text_field("assignment[]", 'ExpoCode',"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'project' ,"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'parameter' ,"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'cchdo_contact' ,"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'data_contact',"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'current_status',"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'action',"size" => 10) %></td>
      <td><%= text_field("assignment[]", 'priority',"size" => 5) %></td>
      <td><%= text_field("assignment[]", 'deadline',"size" => 10) %></td>
      <td><%= link_to_remote "Notes", :update => "user_tasks",:url => { :action => "search_assignments", :note => @id} %></td>
      <td><%= link_to_remote "History", :update => "user_tasks",:url => { :action => "search_assignments", :history => @id} %>
      <%= hidden_field("assignment[]", 'manager',"value"=> "#{@user}") %>
      </td>
    </tr>
    <% @ctr += 1 %>
  <% end %>
  <tr><td colspan="6"><%= submit_tag %></td></tr>
</table>
<% end %>
<% else %>
<h2>There are no tasks for <%= @user %>.</h2>
<% end %>
