{% extends "templates/base.jinja2" %}
{% block head -%}
  {{ whh.tags.stylesheet_link('/static/css/browse.css') }}
  {{ whh.tags.stylesheet_link('/static/css/basin_map.css') }}
{%- endblock %}
{% block title %}Browse Data{% endblock %}
{% block content -%}
{% call h.boxed('Browse Data') -%}
  <div id="basin" class="sub-section first">
    <h2>Basin</h2>
    {%- include "templates/_basin_map.html" %}
  </div>

  <div id="ocean" class="sub-section">
    <h2>Ocean</h2>
    <ul>
      {{ whh.HTML.li(whh.tags.link_to('Arctic Ocean', '/arctic.html')) }}
      {{ whh.HTML.li(whh.tags.link_to('Atlantic Ocean', '/atlantic.html')) }}
      {{ whh.HTML.li(whh.tags.link_to('Pacific Ocean', '/pacific.html')) }}
      {{ whh.HTML.li(whh.tags.link_to('Indian Ocean', '/indian.html')) }}
      {{ whh.HTML.li(whh.tags.link_to('Southern Ocean', '/southern.html')) }}
    </ul>
  </div>

  <div id="time-series" class="sub-section">
    <h2>Time Series</h2>
    <ul>
      {{ whh.HTML.li(whh.tags.link_to('HOT', '/search/results?query=HOT')) }}
      {{ whh.HTML.li(whh.tags.link_to('BATS', '/search/results?query=BATS')) }}
    </ul>
  </div>

  <div id="project" class="sub-section">
    <h2>Project</h2>
    <ul>
      {{ whh.HTML.li(whh.tags.link_to('Project Carina', '/search/results?query=CARINA')) }}
    </ul>
  </div>

  <div id="list" class="sub-section">
    <h2>List</h2>
    <ul>
      {{ whh.HTML.li(whh.tags.link_to('Cruise', '/cruises')) }}
      {{ whh.HTML.li(whh.tags.link_to('Country', '/countries')) }}
      {{ whh.HTML.li(whh.tags.link_to('Person', '/people')) }}
      {{ whh.HTML.li(whh.tags.link_to('Ship', '/ships')) }}
      {{ whh.HTML.li(whh.tags.link_to('Institution', '/institutions')) }}
      {{ whh.HTML.li(whh.tags.link_to('Collection', '/collections')) }}
    </ul>
  </div>
{%- endcall %}
{%- endblock %}
{% block js %}
  {{ whh.tags.javascript_link('/static/js/jquery-1.4.4.min.js') }}
  {{ whh.tags.javascript_link('/static/js/basin_map.js') }}
{% endblock %}
