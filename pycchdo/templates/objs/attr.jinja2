{% extends "objs/base.jinja2" %}
{% block title %}Attr{% endblock %}
{% block content %}
  {% call h.boxed('attr %s' % attr.id, class='objs attr') -%}
    {%- if attr.deleted %}
      <p>del {{ attr.key }}
    {%- else %}
      <p>{{ attr.key }} = {{ h.attr_value(attr) }} </p>
    {%- endif %}

    <h2>Created</h2>
    <p>
      {{ attr.creationtimestamp }}
      {{ h.link_person(attr.creation_person) }}
    </p>

    <h2>Pending</h2>
    <p>
      {{ attr.pending_timestamp }}
      {{ h.link_person(attr.pending_person) }}
    </p>

    <h2>Judged</h2>
    <p>
      {{ attr.judgment_timestamp }}
      {{ h.link_person(attr.judgment_person) }}
    </p>
    <a href="../a">Back to obj attrs</a>
  {%- endcall %}
{% endblock %}

