{% extends "templates/base.jinja2" %}
{% block title %}Obj Attrs{% endblock %}
{% block content %}
  {% call h.boxed('%s attrs' % obj['_id']) -%}
    <p>{{obj}}</p>

    <h2>Attrs</h2>
    <p>
      <form action="/objs/{{ obj['_id'] }}/a/" method="POST">
        <input type="text" name="key"><input type="text" name="value"><input type="submit" value="Add">
      </form>
    </p>

    <p>
      <a href="/objs">Back to objs</a>
    </p>
  {%- endcall %}
{% endblock %}
