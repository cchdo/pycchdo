{% extends "templates/base.jinja2" %}
{% block title %}Obj {{id}}{% endblock %}
{% block content %}
  {% call h.boxed('Obj {id}'.format(id=id)) -%}
    {{ h.link_obj_polymorph(obj) }}

    <p>{{obj}}</p>

    <table>
      {%- for key in obj.allowed_keys|sort %}
        <tr><th>{{ key }}</th><td>{{ obj[key] }}</td></tr>
      {%- endfor %}
    </table>

    <h2>Attrs</h2>
    {% if obj.attr_keys -%}
      <table>
      {% for key in obj.attr_keys -%}
        <tr><th>{{ key }}</th><td>{{ obj.get(key) }}</td></tr>
      {%- endfor %}
      </table>
    {%- endif %}
    <p>
      <a href="/obj/{{ obj['_id'] }}/a">Edit attributes</a>
    </p>

    <h2>Actions</h2>
    <p>
      <form action="/obj/{{ obj['_id'] }}" method="DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete">
      </form>
    </p>
    <p>
      <a href="/objs">Back to objs</a>
    </p>
  {%- endcall %}
{% endblock %}
