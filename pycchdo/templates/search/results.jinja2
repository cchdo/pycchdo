{% extends "/base.jinja2" %}
{%- block head %}
  {{ whh.tags.stylesheet_link('/static/css/metaTable.css') }}
  {{ whh.tags.stylesheet_link('/static/timeglider/jquery-ui-1.10.3.custom.min.css') }}
  {{ whh.tags.stylesheet_link('/static/timeglider/Timeglider.css') }}
  {{ whh.tags.stylesheet_link('/static/timeglider/timeglider.datepicker.css') }}
{%- endblock %}
{%- block title %}{{ query }} - Search{%- endblock %}

{% block content -%}
  {% call h.boxed('Search results for "%s"' % query, class='search-results') -%}
    {%- if results %}
      {%- if 'cruise' in results and results['cruise'] %}
        {# Show the cruises first because they are most
           important. Also, cruises are the only Obj that
           can't have cruises associated with them. #}
        <h2>Cruises</h2>
        {{- h.cruise_listing(request, results['cruise'], pre_expand=expanded, show_data=expanded) }}
      {%- endif %}

      {%- for category, items in results.items() %}
        {%- if category != 'cruise' and items|length > 0 %}
          <h2>{{ h.pluralize_category(category) }}</h2>
          {%- for result in items %}
            <h3>{{- h.link_obj_polymorph(result) }}</h3>
            {%- if items[result]|length > 0 %}
              {{- h.cruise_listing(request, items[result], pre_expand=expanded, show_data=expanded) }}
            {%- endif %}
          {%- endfor %}
        {%- endif %}
      {%- endfor %}
    {%- else %}
      <h2>Sorry, there are no results for your query.</h2>

      <p>Try the {{ h.tags.link_to('advanced search', request.route_path('advanced_search')) }}?</p>

      <h3>Wildcard operator<h3>
      <p>If you were searching for something beginning or ending with {{ query }}, use the wildcard operator "*".</p>
      <p>e.g. searching for cruises with ExpoCode beginning "33RR", use "33RR*"</p>

      <h3>Boolean operators</h3>
      <p>You may use the boolean operators "AND", "OR", "NOT" in your query.</p>

      <h3>Grouping operators</h3>
      <p>You may use parentheses to group parts of your query.</p>

    {%- endif %}
  {%- endcall %}
{%- endblock %}

{%- block js %}
  {%- assets
    filters='rjsmin',
    output='gen/search.results.js',
    'js/metaTable.js',
    'js/search_results.js'
,
    'timeglider/jquery-ui-1.10.3.custom.min.js',
    'timeglider/js/underscore-min.js',
    'timeglider/js/backbone-min.js',
    'timeglider/js/json2.js',
    'timeglider/js/jquery.tmpl.js',
    'timeglider/js/ba-tinyPubSub.js',
    'timeglider/js/jquery.mousewheel.js',
    'timeglider/js/jquery.ui.ipad.js',
    'timeglider/js/globalize.js',

    'timeglider/TG_Date.js',
    'timeglider/TG_Org.js',
    'timeglider/TG_Timeline.js',
    'timeglider/TG_TimelineView.js',
    'timeglider/TG_Mediator.js',
    'timeglider/timeglider.timeline.widget.js',
    'timeglider/timeglider.datepicker.js'
  %}
     {{ whh.tags.javascript_link(ASSET_URL) }}
  {%- endassets %}
{%- endblock %}
