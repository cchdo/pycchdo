{% extends "templates/base.jinja2" %}
{% block head %}
  {{ whh.tags.stylesheet_link('/static/css/session/identify.css') }}
{% endblock %}
{% block title %}Sign in{% endblock %}
{% block content %}
  {% call h.boxed(whh.literal('&nbsp;')) -%}
    <div id="options">
      <div class="left"><div id="janrainEngageEmbed"></div></div>
      <div class="right">
        <div id="no_accounts">
          <h2>No Google, Twitter, LinkedIn or Facebook account?</h2>
          <p>Please consider using</p>
          <p><a href="http://openid.net/"><img alt="OpenID" src="/static/openid-logo-wordmark.png"></a></p>
          <p><a href="http://openid.net/">Learn about OpenID.</a></p>
        </div>
      </div>
      <div id="direct_signin">
        <h2>Alternatively, leave your contact information</h2>
        {{ whh.tags.form(request.route_path('session_new')) }}
        <table>
          <tr><th>{{ whh.tags.title('First name', label_for='direct_name_first', required=True) }}</th><td>{{ whh.tags.text('direct_name_first') }}</td></tr>
          <tr><th>{{ whh.tags.title('Last name', label_for='direct_name_last', required=True) }}</th><td>{{ whh.tags.text('direct_name_last') }}</td></tr>
          <tr><th>{{ whh.tags.title('Email', label_for='direct_email', required=True) }}</th><td>{{ whh.tags.text('direct_email', type='email') }}</td></tr>
          <tr><td>{{ whh.tags.required_legend()}}</td><td><input type="submit" value="Sign in"></td></tr>
        </table>
        {{ whh.tags.end_form() }}
      </div>
    </div>
  {%- endcall %}
{% endblock %}
{% block js %}
  {{ whh.tags.javascript_link('/static/js/jquery-1.4.4.min.js') }}
  {%- if not request.user %}{% include 'templates/_janrain.html' ignore missing %}{%- endif %}
{% endblock %}
