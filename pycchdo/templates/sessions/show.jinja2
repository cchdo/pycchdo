{%- extends "/base.jinja2" %}
{%- set description = "No one is signed in" %}
{%- if person %}
  {%- set description = h.link_person(person) + " is signed in" %}
{%- endif %}
{% block title %}{{ description }}{% endblock %}
{% block content %}
  {% call h.boxed(description) -%}
    <p>{{person or ''}}</p>
    <p>{{person.id}}</p>
  {%- endcall %}
{% endblock %}

