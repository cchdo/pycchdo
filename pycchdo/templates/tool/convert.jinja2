{%- extends "templates/base.jinja2" %}
{%- block title %}Webtool | Convert file formats{% endblock %}
{%- block content %}
  {% call h.boxed('Convert file formats') %}
    <p>
      Please be patient. It may take a few minutes for your conversion to
      complete, especially if you submit large files.
    </p>

    <h2>Convert a NetCDF CTD to OceanSites NetCDF.</h2>

    {{ whh.tags.form('/tool/convert',
                     hidden_fields={'from': 'ctd_netcdf', 'to': 'ctd_oceansites_netcdf'},
                     multipart=True) }}
      <input type="file" name="file">
      {{ whh.tags.select('timeseries', None, OCEANSITES_TIMESERIES_SELECT) }}
      <input type="submit" value="Convert">
    {{ whh.tags.end_form() }}

    <h2>Convert a NetCDF CTD Zip to OceanSites NetCDF Zip.</h2>

    {{ whh.tags.form('/tool/convert',
                     hidden_fields={'from': 'ctdzip_netcdf', 'to': 'ctdzip_oceansites_netcdf'},
                     multipart=True) }}
      <input type="file" name="file">
      {{ whh.tags.select('timeseries', None, OCEANSITES_TIMESERIES_SELECT) }}
      <input type="submit" value="Convert">
    {{ whh.tags.end_form() }}

    <h2>Convert a CTD Exchange to OceanSites NetCDF Zip.</h2>

    {{ whh.tags.form('/tool/convert',
                     hidden_fields={'from': 'ctd_exchange', 'to': 'ctdzip_oceansites_netcdf'},
                     multipart=True) }}
      <input type="file" name="file">
      {{ whh.tags.select('timeseries', None, OCEANSITES_TIMESERIES_SELECT) }}
      <input type="submit" value="Convert">
    {{ whh.tags.end_form() }}

    <h2>Convert a Bottle Exchange to KML.</h2>

    {{ whh.tags.form('/tool/convert',
                     hidden_fields={'from': 'bottle_exchange', 'to': 'kml'},
                     multipart=True) }}
      <input type="file" name="file">
      <input type="submit" value="Convert">
    {{ whh.tags.end_form() }}
  {% endcall %}
{%- endblock %}
